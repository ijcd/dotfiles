#!/bin/sh
# net-default-if - Print the default network interface
#
# Usage: net-default-if
#
# Examples:
#   $ net-default-if
#   en0
#
# Returns the interface used for the default route (internet traffic).

set -e

case "$(uname -s)" in
  Darwin)
    route -n get default 2>/dev/null | awk '/interface:/ {print $2}'
    ;;
  Linux)
    ip route show default 2>/dev/null | awk '{print $5; exit}'
    ;;
  *)
    echo "Unsupported OS: $(uname -s)" >&2
    exit 1
    ;;
esac
